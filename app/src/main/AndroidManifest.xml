<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abamobile.empleodigital.trackingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.abamobile.empleodigital.trackingapp.design.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.abamobile.empleodigital.trackingapp.design.activities.ClockInActivity" />
        <activity
            android:name="com.abamobile.empleodigital.trackingapp.design.activities.ShiftLogActivity"
            android:label="@string/title_activity_user_button" />
        <activity android:name="com.abamobile.empleodigital.trackingapp.design.activities.AddTaskActivity" />
        <activity
            android:name="com.abamobile.empleodigital.trackingapp.design.activities.TaskActivity"
            android:label="@string/title_activity_choose_task2"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.abamobile.empleodigital.trackingapp.design.activities.TaskLogActivity"/>
    </application>
</manifest>